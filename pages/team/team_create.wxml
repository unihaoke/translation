<!--pages/team/team_create.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="weui-uploader">
      <view class="weui-uploader__bd team_create_pic">
        <view class="weui-uploader__input-box">
          <view class="weui-uploader__input" bindtap="chooseImage"></view>
        </view>
      </view>
      <view class="weui-uploader__bd team_create_pic">
        <text>小组封面上传</text>
      </view>
    </view>
  </view>
  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">小组名称</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入小组名称" />
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">组织名称</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input"  />
        </view>
      </view>
    </view>

    <view class="weui-cells__title">小组描述</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="showTopTips">创建</button>
        </view>
  </view>

</view>